@model decore.ViewModels.EventViewModel
@{
    ViewBag.Title = "Event Page";
}


<h2>EVENT</h2>
<div>
    @using (Html.BeginForm("CreateEvent", "Event", "POST"))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.Label("Namn","Namn på event:")
            @Html.TextBox("Name","", new { @class="form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Datum", "Datum:")
            <!--type date ska det va..-->
            @Html.TextBox("Date", "", new { @class = "form-control"}) 
        </div>
        <div class="form-group">
            @Html.Label("Adress", "Adress:")
            <input type="text" class="form-control" id="usr">
        </div>

        @Html.Label("Event", "Typ av event:")
        @Html.DropDownListFor(model => model.Events, new SelectList(Model.Events, "EventId", "EventTYPE"), new { @class = "form-control" })


        <div class="form-group">
            @Html.Label("TextArea", "Event beskrivning:")
            @Html.TextArea("TextArea", "", new { @class = "form-control" })
        </div>
        
        
        
        @Html.Label("Ansvarig", "Ansvarig för event:")
    <div class="form-group">
            <select class="selectpicker" multiple>
                <option>Martin</option>
                <option>Vidar</option>
                <option>Rasmus</option>
                <option>Lille Patrik</option>
            </select>
        </div>

            <button type="submit" class="btn btn-danger">Avbryt</button>
            <button type="submit" class="btn btn-success">Klar</button>

            <div class="alert alert-success fade">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>Event created!</strong> 
            </div>

    }
</div>

@section scripts {
<script>
                $(".btn-success").on("click", function() {
                    $(".alert").removeClass("in").show();
	                $(".alert").delay(200).addClass("in").fadeOut(2000);
                });
</script>
    }